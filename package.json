{
  "name": "pizza-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:security": "eslint . --ext .ts,.tsx,.js,.jsx --config .eslintrc.security.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "playwright test tests/security/",
    "test:a11y": "playwright test WCAG-2.1-AA/tests/",
    "test:a11y:headed": "playwright test WCAG-2.1-AA/tests/ --headed",
    "test:a11y:debug": "playwright test WCAG-2.1-AA/tests/ --debug",
    "test:a11y:report": "playwright show-report",
    "test:a11y:perceivable": "playwright test WCAG-2.1-AA/tests/01-perceivable.spec.ts",
    "test:a11y:operable": "playwright test WCAG-2.1-AA/tests/02-operable.spec.ts",
    "test:a11y:understandable": "playwright test WCAG-2.1-AA/tests/03-understandable.spec.ts",
    "test:a11y:robust": "playwright test WCAG-2.1-AA/tests/04-robust.spec.ts",
    "test:a11y:ci": "playwright test WCAG-2.1-AA/tests/ --reporter=html,junit",
    "audit:security": "npm audit && node tests/security/supply-chain-audit.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@heroicons/react": "2.2.0",
    "bcryptjs": "2.4.3",
    "clsx": "2.1.1",
    "cors": "2.8.5",
    "crypto-js": "4.2.0",
    "express": "^4.22.1",
    "express-rate-limit": "7.4.1",
    "helmet": "8.0.0",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.2",
    "next": "16.1.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "uuid": "11.0.3",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@playwright/test": "1.58.2",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.17",
    "@types/crypto-js": "4.2.2",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "20.17.9",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@types/uuid": "11.0.0",
    "autoprefixer": "^10.4.24",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-security": "3.0.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "5.7.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
